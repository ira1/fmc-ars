<table class="income_trend">
      		    <tr>
        		    <th>Of those who answered&hellip;</th>
        		    <th class="increased"><span class="fa fa-arrow-circle-up"></span> Income increased:</th>
        		    <th class="quiet">% of group saying role was applicable to their career?</th>
      		    </tr>
							
							<% @inc_trends_up.each do |trend| %>
      		    <tr>
        		    <td><div><%=trend[0]%>%</div>  more said</td>
        		    <td class="increased"><%=init_cap(trend[1])%></td>
        		    <td class="quiet"><div><%=trend[2]%>%</div><div class="progressbar"><div class="quiet" style="width: <%=trend[2]%>px "></div></div></td>
      		    </tr>
							<%end%>
      		    <tr>
        		    <th></th>
        		    <th class="decreased"><span class="fa fa-arrow-circle-down"></span> Income decreased:</th>
        		    <th></th>
      		    </tr>
							<% @inc_trends_down.each do |trend| %>
      		    <tr>
        		    <td><div><%=trend[0]%>%</div>  more said</td>
        		    <td class="decreased"><%=init_cap(trend[1])%></td>
        		    <td class="quiet"><div><%=trend[2]%>%</div><div class="progressbar"><div class="quiet" style="width: <%=trend[2]%>px "></div></div></td>
      		    </tr>
							<%end%>
							
    		  </table>